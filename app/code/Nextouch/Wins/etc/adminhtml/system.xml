<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="nextouch" translate="label" sortOrder="500">
            <label>Nextouch</label>
        </tab>

        <section id="wins"
                 translate="label"
                 type="text"
                 sortOrder="1"
                 showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <label>Wins</label>
            <tab>nextouch</tab>
            <resource>Nextouch_Wins::config_wins</resource>

            <group id="general"
                   translate="label"
                   type="text"
                   sortOrder="1"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>General</label>

                <field id="base_url"
                       translate="label comment"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0"
                       canRestore="1">
                    <label>Base URL</label>
                    <comment>Base URL for Wins APIs</comment>
                    <validate>required-entry validate-url</validate>
                </field>

                <field id="username"
                       translate="label comment"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0"
                       canRestore="1">
                    <label>Username</label>
                    <comment>Username used to authorize operations</comment>
                    <validate>required-entry</validate>
                </field>

                <field id="password"
                       translate="label comment"
                       type="password"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0"
                       canRestore="1">
                    <label>Password</label>
                    <comment>Password used to authorize operations</comment>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
