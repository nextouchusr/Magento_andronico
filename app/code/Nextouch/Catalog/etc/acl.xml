<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Catalog::catalog">
                    <resource id="Magento_Catalog::catalog_inventory">
                        <resource id="Magento_Catalog::products">
                            <resource id="Magento_Catalog::read_products" title="Read Products" translate="title"/>
                            <resource id="Magento_Catalog::save_products" title="Save Products" translate="title"/>
                            <resource id="Magento_Catalog::delete_products" title="Delete Products" translate="title"/>
                        </resource>
                        <resource id="Magento_Catalog::categories">
                            <resource id="Magento_Catalog::read_categories" title="Read Categories" translate="title"/>
                            <resource id="Magento_Catalog::save_categories" title="Save Categories" translate="title"/>
                            <resource id="Magento_Catalog::delete_categories" title="Delete Categories" translate="title"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
