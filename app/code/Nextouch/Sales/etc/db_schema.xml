<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order">
        <column xsi:type="timestamp"
                name="completed_at"
                on_update="false"
                nullable="true"
                comment="Completed Date"/>
        <column xsi:type="int"
                name="order_sync_failures"
                padding="11"
                unsigned="false"
                identity="false"
                nullable="false"
                default="0"
                comment="Order Sync Failures"/>
        <column xsi:type="int"
                name="shipping_sync_failures"
                padding="11"
                unsigned="false"
                identity="false"
                nullable="false"
                default="0"
                comment="Shipping Sync Failures"/>
        <column xsi:type="boolean"
                name="is_parked"
                nullable="false"
                default="false"
                comment="Is Parked"/>
        <column xsi:type="varchar"
                name="findomestic_application_id"
                length="100"
                nullable="true"
                comment="Findomestic Application ID"/>
        <column xsi:type="varchar"
                name="findomestic_issuer_installment_id"
                length="100"
                nullable="true"
                comment="Findomestic Issuer Installment ID"/>
        <column xsi:type="smallint"
                name="findomestic_application_status"
                padding="5"
                unsigned="true"
                identity="false"
                nullable="false"
                default="0"
                comment="Findomestic Application Status"/>
    </table>

    <table name="sales_order_address">
        <column xsi:type="varchar"
                name="pec"
                length="255"
                nullable="true"
                comment="PEC"/>
        <column xsi:type="varchar"
                name="sdi_code"
                length="255"
                nullable="true"
                comment="SDI Code"/>
        <column xsi:type="varchar"
                name="invoice_type"
                length="50"
                nullable="false"
                default="invoice"
                comment="Invoice Type"/>
        <column xsi:type="varchar"
                name="mobile_phone"
                length="255"
                nullable="true"
                comment="Mobile Phone"/>
        <column xsi:type="varchar"
                name="fiscal_code"
                length="255"
                nullable="true"
                comment="Fiscal Code"/>
        <column xsi:type="boolean"
                name="limited_traffic_zone"
                nullable="false"
                default="false"
                comment="Limited Traffic Zone"/>
        <column xsi:type="smallint"
                name="floor"
                padding="5"
                unsigned="true"
                identity="false"
                nullable="false"
                default="0"
                comment="Floor"/>
        <column xsi:type="boolean"
                name="stair"
                nullable="false"
                default="false"
                comment="Stair"/>
        <column xsi:type="boolean"
                name="lift"
                nullable="false"
                default="false"
                comment="Lift"/>
    </table>
</schema>
