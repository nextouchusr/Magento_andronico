<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <axepta_paymentservice>
                <debug>1</debug>
                <active>0</active>
                <title>Axepta plugin di pagamento</title>
                <description>Paga con carta di credito o di debito VISA, Mastercard o Maestro</description>
                <payment_method>axepta</payment_method>
                <model>AxeptaPaymentserviceModelFacade</model>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_refund>1</can_refund>
                <can_use_checkout>1</can_use_checkout>
                <can_initialize>1</can_initialize>
                <is_gateway>1</is_gateway>
                <add_info_1>[{site_title}] Ordine da nuovo cliente ({order_number}) - {order_date}</add_info_1>
                <add_info_2>[{site_title}] Ordine da nuovo cliente ({order_number}) - {order_date}</add_info_2>
                <add_info_3>[{site_title}] Ordine da nuovo cliente ({order_number}) - {order_date}</add_info_3>
                <add_info_4>[{site_title}] Ordine da nuovo cliente ({order_number}) - {order_date}</add_info_4>
                <add_info_5>[{site_title}] Ordine da nuovo cliente ({order_number}) - {order_date}</add_info_5>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </axepta_paymentservice>
        </payment>
    </default>
</config>
